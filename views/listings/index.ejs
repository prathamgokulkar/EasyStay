<style>
  .filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    
  }
  .filter{
    margin: 10px;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .tax-toggle{
    border: 1px solid black;
    height: 3.5rem;
    padding: 1rem;
    border-radius: 1rem;
  }

  .tax-info{
    display:none;
  }
</style>

<div class="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-city"></i></div>
    <p>Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Hill Stations</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lake view</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tents"></i></i></div>
    <p>Camp</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farm</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </div>

  <div class="tax-toggle ms-auto">
    
  <div class="form-check reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
  </div>

  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
<% for (listing of allListings){ %>
<div class="card col listing-card" style="width: 18rem;">
  <!-- <img src="<%= listing.images %>" class="card-img-top" alt="listing_image"> -->
  <img src="<%= listing.images.url || 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80' %>" class="card-img-top" alt="listing image">
  <div class="card-body">
    <h5 class="card-title"><%=listing.title%></h5>
    <h6>&#8377;<%=listing.price.toLocaleString("en-IN")%>/ per night <i class="tax-info">&nbsp; +18% GST</i></h6>
    <p class="card-text"><%=listing.description%></p>
    <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
  </div>
</div>
<% } %>
</div>
